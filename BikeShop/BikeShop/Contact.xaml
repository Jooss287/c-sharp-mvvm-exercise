<Page x:Class="BikeShop.Contact"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BikeShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Contact">

    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Margin="10 10 0 5">
            <TextBlock Text="Sender" Width="60"></TextBlock>
            <TextBox Width="300" Height="20"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10 10 0 5">
            <TextBlock Text="Message" Width="60"></TextBlock>
            <TextBox Width="300" Height="200"></TextBox>
        </StackPanel>
    </StackPanel>
    
</Page>
